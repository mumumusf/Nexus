# ä¸»ç¨‹åº
main() {
    show_main_banner
    
    while true; do
        show_main_menu
        read -p "è¯·é€‰æ‹©æ“ä½œ (0-4): " choice
        
        case $choice in
            1)
                install_nodes
                ;;
            2)
                manage_nodes
                ;;
            3)
                show_system_resources
                echo ""
                read -p "æŒ‰å›è½¦é”®ç»§ç»­..."
                ;;
            4)
                show_help
                echo ""
                read -p "æŒ‰å›è½¦é”®ç»§ç»­..."
                ;;
            0)
                echo "ğŸ‘‹ æ„Ÿè°¢ä½¿ç”¨ Nexus Network ä¸€ä½“åŒ–ç®¡ç†å·¥å…·ï¼"
                exit 0
                ;;
            *)
                echo "âŒ æ— æ•ˆé€‰æ‹©ï¼Œè¯·è¾“å…¥ 0-4"
                ;;
        esac
        
        echo ""
    done
}

# æ£€æŸ¥å‚æ•°å¹¶è¿è¡Œ
if [ "$1" = "--install" ]; then
    # ç›´æ¥å®‰è£…æ¨¡å¼
    show_main_banner
    install_nodes
elif [ "$1" = "--manage" ]; then
    # ç›´æ¥ç®¡ç†æ¨¡å¼
    show_main_banner
    manage_nodes
else
    # äº¤äº’æ¨¡å¼
    main
fi 